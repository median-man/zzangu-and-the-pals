<h1 id="reserve-kennel-h1" style="text-align: center;">Choose the Kennel!</h1>

<div class="reservationpage-container">
  <h1 style="text-align: center;">Available Kennels</h1>

  {{#each kennels as |kennel|}}
  <div class="box box-down cyan">
    <h2>{{kennel.name}}</h2>
    <p>Availability: {{ kennel.availability }} dog(s)</p>
    <img src="https://assets.codepen.io/2301174/icon-supervisor.svg" alt="">
  </div>
  {{/each}}
</div>

<div class="reservationpage-container">
  <h1 style="text-align: center;">Choose Your Pet</h1>

  <form class="reservation-form">

    <div class="choosepet-container">
      <input type="hidden" name="startDate" value="{{startDate}}">
      <input type="hidden" name="endDate" value="{{endDate}}">

      <div class="btn-group">
        <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
          Pets Lists
        </button>
        <select class="dropdown-menu" id="userPets">
          {{#if pets.length}}
            {{#each pets as |pet|}}
              <option><a class="dropdown-item" value="{{pet.id}}">{{pet.name}}</a></option>
            {{/each}}
          {{/if}}
        </select>
      </div>

      <br><br>
      <button type="submit" class="cancelBtn" id="cancel">Cancel</button>
      <button type="button" class="confirmBtn" id="confirm">Confirm</button>
    </div>
  </form>
</div>


<script src='/js/reservation.js'></script>
